<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackbackground"
    tools:context=".MainActivity">
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ftngbtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_account_box_black_24dp"
        />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ftngbtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toLeftOf="@+id/ftngbtn1"
        android:layout_marginRight="90dp"
        android:src="@drawable/ic_settings_phone_black_24dp"
        android:layout_marginTop="50dp"
        />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ftngbtn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toLeftOf="@+id/ftngbtn1"
        android:layout_marginRight="160dp"
       android:src="@drawable/ic_add_circle_black_24dp"
        android:layout_marginTop="50dp"
        />



    <TextView
        android:id="@+id/txtnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="212dp"
        android:text=""
        android:maxLength="10"
        android:textSize="30dp"
        android:layout_alignParentRight="true"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txtnum"
        android:layout_marginTop="30dp">

        <include layout="@layout/dialpad"></include>

    </RelativeLayout>


</RelativeLayout>